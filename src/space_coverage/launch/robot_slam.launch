<?xml version="1.0"?>
<launch>

  <master auto="start"/>

  <!-- <arg name="node_start_delay" default="15.0" />  
  <node name="listener" pkg="roscpp_tutorials" type="listener" launch-prefix="bash -c 'sleep $(arg node_start_delay); $0 $@' " /> -->

  <!-- Robot Model -->
  <arg name="model" default="$(find p3dx_description)/urdf/pioneer3dx.xml"/>
  <param name="robot_description" textfile="$(arg model)" />

  <!-- ESTOP 
  <node type="estop" name="estop" pkg="estop" launch-prefix="bash -c 'sleep 6; $0 $@' "/>-->

  <!-- GMapping -->
  <include file="$(find space_coverage)/Modules/gmapping.launch">
    <arg name="node_start_delay" value="2"/>
  </include>

  <!-- Rviz -->
  <node type="rviz" name="rviz" pkg="rviz" args="-d $(find space_coverage)/world/rviz/robot.rviz" launch-prefix="bash -c 'sleep 2; $0 $@' "/>

</launch>
